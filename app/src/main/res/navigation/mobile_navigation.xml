<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.elacqua.opticmap.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_photoEditFragment"
            app:destination="@id/photoEditFragment" />
        <action
            android:id="@+id/action_navigation_home_to_ocrFragment"
            app:destination="@id/ocrFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_places"
        android:name="com.elacqua.opticmap.ui.places.PlacesFragment"
        android:label="@string/title_places"
        tools:layout="@layout/fragment_places" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.elacqua.opticmap.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/ocrFragment"
        android:name="com.elacqua.opticmap.ui.fragments.OcrFragment"
        android:label="fragment_ocr"
        tools:layout="@layout/fragment_ocr" />
    <fragment
        android:id="@+id/photoEditFragment"
        android:name="com.elacqua.opticmap.ui.fragments.PhotoEditFragment"
        android:label="fragment_photo_edit"
        tools:layout="@layout/fragment_photo_edit" >
        <action
            android:id="@+id/action_photoEditFragment_to_ocrFragment"
            app:destination="@id/ocrFragment" />
    </fragment>
</navigation>