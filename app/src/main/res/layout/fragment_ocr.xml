<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.fragments.OcrFragment">

        <ImageView
            android:id="@+id/img_ocr_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin_small"
            app:layout_constraintBottom_toTopOf="@id/line1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/horizontal_margin_extra_large"
            android:layout_marginEnd="@dimen/horizontal_margin_extra_large"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/txt_ocr_result" />

        <TextView
            android:id="@+id/txt_ocr_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_medium"
            android:layout_marginTop="@dimen/vertical_margin_small"
            android:layout_marginEnd="@dimen/horizontal_margin_medium"
            android:layout_marginBottom="@dimen/vertical_margin_medium"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/line2"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="OCR RESULT" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/horizontal_margin_extra_large"
            android:layout_marginTop="@dimen/vertical_margin_small"
            android:layout_marginEnd="@dimen/horizontal_margin_extra_large"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@id/txt_translation_result" />

        <TextView
            android:id="@+id/txt_translation_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_medium"
            android:layout_marginTop="@dimen/vertical_margin_small"
            android:layout_marginEnd="@dimen/horizontal_margin_medium"
            android:layout_marginBottom="@dimen/vertical_margin_medium"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="OCR RESULT" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>